.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 150rpx;
	height: 150rpx;
}
.service-item image{
	width: 140rpx;
	height: 140rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags{
	margin: 6rpx 0;
  display: flex;
  gap: 20rpx;
}
.service-tags text{
	padding: 8rpx 24rpx;
	line-height: 1;
	font-size: 28rpx;
	border-radius: 30rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}

.delete-btn {
  background-color: #ff4d4f;
  color: white;
}

.edit-btn {
  background-color: #f7982a;
  color: white;
}

.service-city{
	color: #666;
}

.action-bar {
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7982a;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  box-shadow: 0 4px 12px rgba(247, 152, 42, 0.2);
  width: 94%;
  transition: all 0.3s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(247, 152, 42, 0.15);
}

.add-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.search-flex {
  padding: 20rpx;
  background: white;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  flex: 1;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
}

.search-bar input {
  font-size: 34rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.search-extra-btn {
  background: #f7982a;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
  font-size: 34rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container-body {
  flex: 1;
  background: #f5f5f5;
}
