/* pages/gps/monitor/map_monitor.wxss */

.container {
  width: 100%;
  height: 100vh;
}

.map-container {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

map {
  width: 100%;
  height: 100vh;
}

/* 查询按钮样式 */
.query-btn {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #07c160;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.2);
  z-index: 100;
  transition: all 0.3s ease;
}

.query-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 2px 6px rgba(7, 193, 96, 0.15);
}

/* 信息面板样式 */
.info-panel {
  position: fixed;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.info-content {
  font-size: 28rpx;
}

.info-item {
  margin: 12rpx 0;
  color: #333;
  line-height: 1.6;
  display: flex;
  align-items: center;
}

.close-btn {
  margin-top: 24rpx;
  text-align: center;
  padding: 12rpx 0;
  color: #07c160;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
  transition: all 0.3s ease;
}

.close-btn:active {
  opacity: 0.7;
}

/* 标记点样式 */
.marker-label {
  padding: 8rpx 16rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333333;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}
