.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 150rpx;
	height: 150rpx;
}
.service-item image{
	width: 140rpx;
	height: 140rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.shop-item {
  display: flex;
  /* 添加边框 */
  padding: 20rpx;
  border: 1rpx solid #efefef;
  /* 圆角样式 */
  border-radius: 10rpx;
  margin: 20rpx;
  /* 盒子阴影 */
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.left-thumb image {
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin-right: 20rpx;
}
.btn-block{
  width: 100rpx;
  height: 100rpx;
}
.right-info{
  display: flex;
  /* 纵向布局 */
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.shop-title{
  /* 文本加粗 */
  font-weight: bold;
  font-size: 20px;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  background-color: #ff9933;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.info-right {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.auth-tag {
  display: inline-block;
  background-color: #00cc66;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.info-list {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.item-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.version-info {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.version-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.version-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 退出登录按钮样式 */
.logout-btn {
  margin: 40rpx 20rpx;
  background-color: #ff4d4f;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
}
