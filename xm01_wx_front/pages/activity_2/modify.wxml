<view class="container container-gray">
	<view class="group">
		<view class="group-header">违章信息修改</view>
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label">车牌号</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{car_number}}" bindinput="inputcarnumber"></input>
					</view>
				</view>
				<view class="input-item">
					<text class="input-item-label">地点</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{location}}" bindinput="inputlocation"></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">违章类型</text>
					<view class="input-item-content">
            <input type="text" placeholder="请输入" value="{{type}}" bindinput="inputtype"></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">违章时间</text>
					<view class="input-item-content">
            <input type="text" placeholder="请输入" value="{{time}}" bindinput="inputtime"></input>
					</view>
				</view>
				
			</view>
		</view>
	</view>
	<view class="btn-submit">
		<button class="btn-block btn-orange" bindtap="applySubmit">提交</button>
	</view>
</view>