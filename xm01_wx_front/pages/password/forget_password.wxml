<view class="container container-gray">
	<view class="group">
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label">用户名称</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{user_name}}" bindinput="inputusername"></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">新密码</text>
					<view class="input-item-content">
						<input type="password" password="true" placeholder="请输入新密码" value="{{password}}" bindinput="inputpassword" maxlength="20"></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">邮箱</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{email}}" bindinput="inputemail"></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">验证码</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{nick_name}}" bindinput="inputnickname"></input>
					</view>
          <view class="yanzhengma">
            <button>发送验证码</button>
          </view>
				</view>
        <view class="input-item">
					<text class="input-item-label">电话</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入" value="{{phonenumber}}" bindinput="inputphonenumber"></input>
					</view>
				</view>
        
			</view>
		</view>
	</view>
  <view class="btn-submit">
		<button class="btn-block btn-orange" bindtap="AddRecord" >确认</button>
	</view>
</view>